<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <welcome-file-list>
        <welcome-file>/jsp/assignment2/auth.jsp</welcome-file>
    </welcome-file-list>
    
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>assignment2.Servlets.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/chess</url-pattern>
        <url-pattern>/chat</url-pattern>
        <url-pattern>/auth</url-pattern>
        <url-pattern>/main</url-pattern>
        <url-pattern>/</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>Chess</servlet-name>
        <servlet-class>assignment2.Servlets.ChessServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Chess</servlet-name>
        <url-pattern>/chess</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Auth</servlet-name>
        <servlet-class>assignment2.Servlets.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Auth</servlet-name>
        <url-pattern>/auth</url-pattern>
<!--        <url-pattern>/</url-pattern>-->
    </servlet-mapping>

    <servlet>
        <servlet-name>ClientServlet</servlet-name>
        <servlet-class>assignment2.Servlets.Networking.ClientServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClientServlet</servlet-name>
        <url-pattern>/client</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServerServlet</servlet-name>
        <servlet-class>assignment2.Servlets.Networking.ServerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServerServlet</servlet-name>
        <url-pattern>/server</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Chat</servlet-name>
        <servlet-class>assignment2.Servlets.ChatServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Chat</servlet-name>
        <url-pattern>/chat</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Main</servlet-name>
        <servlet-class>assignment2.Servlets.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Main</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>assignment2.Servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>
</web-app>